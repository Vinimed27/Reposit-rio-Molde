#:kivy 2.3.1

<MainWidget>:
    orientation: 'vertical'
    canvas:
        Color:
            rgb: 0.5,0.5,0.5
        Rectangle:
            size: self.size
    BoxLayout:
        orientation:'horizontal'
        size_hint: (1,0.1)
        spacing: 10
        Label:
            text: 'SUPERVISÓRIO REFRIGERAÇÃO v1.0'
            size_hint_x: None
            width: 300
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: None
            width: 400
            Label:
                text: 'Configurações'
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: "MODBUS"
                    on_release: root._modbusPopup.open()
                Button:
                    text: "Scan Time"
                    on_release: root._scanPopup.open()
        Image:
            id: img_con
            size_hint_x: None
            width: 80
            source: 'imgs/desconectado.png'
            pos_hint: {'top':1, 'right':1}

    FloatLayout:
        canvas:
            Color:
                rgb: 1,1,1
            Rectangle:
                size: self.size
        Image:
            source: 'imgs/interface2.png'
        
        Label:
            id: lb_temp
            size_hint: (None,None)
            size: (termometro.size[0]*0.25, termometro.size[1])
            pos_hint: {'x':0.76,'y':0.50}
            canvas:
                Color:
                    rgb: 1,0,0
                Rectangle:
                    size: self.size
                    pos: (self.pos[0]+self.width*1.5, self.pos[1])
        Image:
            id: termometro
            source: 'imgs/termometro.png'
            size_hint: 0.17,0.17
            pos_hint: lb_temp.pos_hint
        
        Button:
            size_hint: (None, None)
            size: (0.65*62,0.65*58)
            background_normal: 'imgs/graph_icon.jpg'
            background_down: 'imgs/graph_icon.jpg'
            pos_hint: {'x':0.002,'y':0.22}
            on_release:
                root._graph.open()

        Label:
            id: Velocidade_saida_ar
            text: '-.- m/s'
            font_size: 25
            bold: True
            halign: 'center'
            pos_hint: {'x':0.01,'y': 0.42}
            color: 0,0,0,1    

        Label:
            id: Vazao_saida_ar
            text: '-.- m³/s'
            font_size: 25
            bold: True
            halign: 'center'
            pos_hint: {'x':0.01,'y': 0.36}
            color: 0,0,0,1    

        Label:
            id: Temperatura
            text: '-.- °C'
            font_size: 25
            bold: True
            halign: 'center'
            pos_hint: {'x':0.36,'y':0.22}
            color: 0,0,0,1        